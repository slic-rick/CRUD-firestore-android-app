<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginStart="3dp"
    app:cardBackgroundColor="@color/red"
    app:cardCornerRadius="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/textViewModuleName"
            android:layout_width="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:maxLines="1"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:text="module Name" />

        <TextView
            android:id="@+id/textViewInstructions"
            android:layout_width="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_margin="5dp"
            android:layout_below="@+id/textViewModuleName"
            android:layout_height="wrap_content"
            android:text="instruction" />
        <TextView
            android:id="@+id/textViewdueTime"
            android:layout_width="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_margin="5dp"
            android:layout_below="@+id/textViewInstructions"
            android:layout_height="wrap_content"
            android:text="Due time" />

        <TextView
            android:id="@+id/textViewdueDay"
            android:layout_width="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_margin="5dp"
            android:layout_below="@+id/textViewdueTime"
            android:layout_height="wrap_content"
            android:text="due day" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>